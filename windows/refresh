#!/bin/bash


# No longer synchronize, but instead use the Linux source tree for Windows.
exit

# Synchronize the bibledit source code to the library for Windows and clean it up.
rsync -a --delete ../lib/* libbibledit/libsrc
pushd libbibledit/libsrc > /dev/null
rm compile
rm *.a
rm dev
rm depcomp
rm config.h.*
rm config.status
rm config.log
rm configure*
rm *.m4
rm -rf autom4te.cache
rm bibledit
rm reconfigure
rm valgrind
rm unittest
rm missing
rm Makefile*
rm install-sh
rm stamp-h1
popd > /dev/null


# Update directory separator for Windows.
sed -i 's|"/"|"\\\\"|g' libbibledit/libsrc/config.h


